<h1>ブログ一覧</h1>
<table>
  <tr>
    <th>内容</th>
  </tr>
<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.content %></td>
    <td><%= link_to "詳細確認", blog_path(blog.id) %></td>
    <td><%= link_to "編集する", edit_blog_path(blog.id), data: {confirm: "本当に編集して良いですか？"} %></td>
    <td><%= link_to "ブログを削除する", blog_path(blog.id), method: :delete, data: {confirm: "本当に削除して良いですか？"} %></td>
  </tr>
<% end %>
</table>
<br>
<br>
<%= link_to "ブログ作成画面に戻る", new_blog_path %>
